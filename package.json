{
  "name": "form-serialize-all",
  "version": "0.3.0",
  "description": "Simple form serialization without jquery",
  "repository": "https://github.com/FeliceC/form-serialize.git",
  "author": "Felice Caricati <felice.caricati@gmail.com>",
  "license": "APACHE 2.0",
  "main": "dist/form-serialize.js",
  "scripts": {
    "dev": "webpack --config webpack.dev.js",
    "build": "webpack -p --progress --config webpack.prod.js",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage  && jest-coverage-badges"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^2.0.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-compat": "^2.7.0",
    "eslint-plugin-import": "^2.16.0",
    "jest": "^24.5.0",
    "jest-coverage-badges": "^1.1.2",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-merge": "^4.2.1"
  },
  "browserslist": [
    "last 1 version",
    "IE 11"
  ],
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/jest-coverage-report/**",
      "!webpack.*.js"
    ],
    "coverageReporters": [
      "json-summary"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "allowImportExportEverywhere": true,
      "sourceType": "module"
    },
    "plugins": [
      "compat"
    ],
    "rules": {
      "compat/compat": "error",
      "no-useless-constructor": "off",
      "prefer-destructuring": "off",
      "no-restricted-syntax": "off",
      "no-console": "error",
      "no-debugger": "error",
      "no-alert": "error",
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  }
}