{
  "name": "form-serialize",
  "version": "0.0.1",
  "description": "Simple form serialization without jquery",
  "repository": "https://github.com/FeliceC/form-serialize.git",
  "author": "Felice Caricati <felice.caricati@openmindonline.it>",
  "license": "MIT",
  "private": true,
  "main": "dist/form-serialize.umd.js",
  "scripts": {
    "dev": "webpack --config webpack.dev.js",
    "build": "webpack -p --progress --config webpack.prod.js"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^2.0.0",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-merge": "^4.2.1",
    "webpack-notifier": "^1.7.0"
  },
  "browserslist": [
    "last 1 version",
    "IE 11"
  ],
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "allowImportExportEverywhere": true,
      "sourceType": "module"
    },
    "plugins": [
      "compat"
    ],
    "rules": {
      "compat/compat": "error",
      "no-useless-constructor": "off",
      "no-restricted-syntax": "off",
      "no-console": "error",
      "no-debugger": "error",
      "no-alert": "error",
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ]
    }
  }
}
